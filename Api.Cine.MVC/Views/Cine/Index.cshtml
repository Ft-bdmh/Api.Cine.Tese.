*@
@{
    List<Pelicula> ls = ViewBag.listPelicula;

    string message = ViewBag.TestMessagge;
}

<form class="" id="frmPelicula" style="display:grid;grid-template-columns:1fr 2fr 1fr" asp-controller="Cine" asp-action="Index">

    <label> Ingrese nombre de la Pelicula:</label>
    <input id="name" type="text" class="form form-control" name="namePelicula" />
    <input type="submit" value="Buscar" class="btn btn-info" />
</form>


<h1>Cine</h1>

<div class="container">



</div>







<p>A continuacion se muestran las siguientes peliculas</p>

<div class="container">
    <div class="col-md-6">
    </div>


    <div class="col-md-12">

        <table style="font-family: arial, sans-serif;
  border-collapse: collapse;
  width: 100%;">
            <thead>
                <tr>

                    <th>
                        Id
                    </th>

                    <th>
                        Pelicula
                    </th>
                    <th>
                        Actores
                    </th>
                    <th>
                        Duracion
                    </th>
                    <th>
                        Genero
                    </th>

                </tr>


            </thead>
            <tbody>
              
                @if (ls != null)
                {
                    @foreach (var e in ls)
                    {

                        <tr>
                            <td>
                                @e.Id

                            </td>
                            <td>
                                @e.Name

                            </td>
                            <td>
                                @e.Actors

                            </td>
                            <td>
                                @e.Duration

                            </td>
                            <td>
                                @e.Genre
                            </td>

                            <td>
                                Ver más detalles...
                            </td>
                        </tr>

                    }

                }
                else
                {
                <td>No existe registro..............</td>
                }
            </tbody>
        </table>

    </div>

</div>
